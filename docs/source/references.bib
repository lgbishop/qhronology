@article{baumeler_maximal_2014,
	title = {Maximal incompatibility of locally classical behavior and global causal order in multiparty scenarios},
	volume = {90},
	url = {https://link.aps.org/doi/10.1103/PhysRevA.90.042106},
	doi = {10.1103/PhysRevA.90.042106},
