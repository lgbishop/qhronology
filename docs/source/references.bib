	author = {Everett, Allen and Roman, Thomas},
	month = apr,
	year = {2013},
	keywords = {relativity, academic, accessible, advancement, approachable, college, cutting edge, discovery, easy to understand, einstein, fictional, hypothesis, interdisciplinary, light cone, lorentz transformations, math, mathematics, paradox, physicist, physics, research, scholarly, sci fi, science fiction, scientific, scientist, space, technology, textbook, theoretical, theory, time, university, velocity, video demonstrations, warp drive, wormhole},
